<import src="star$cc54dd1e" />
<template name="header$6833fe5e">
  <view class="_div data-v-dbcb21c4 header">
    <view class="_div data-v-dbcb21c4 content-wrapper">
      <view class="_div data-v-dbcb21c4 avatar">
        <image src="{{seller.avatar}}" class="_image data-v-dbcb21c4"></image>
      </view>
      <view class="_div data-v-dbcb21c4 content">
        <view class="_div data-v-dbcb21c4 title">
          <label class="_span data-v-dbcb21c4 brand"></label>
          <label class="_span data-v-dbcb21c4 name">{{seller.name}}</label>
        </view>
        <view class="_div data-v-dbcb21c4 description">{{seller.description}}/{{seller.deliveryTime}}分钟送达 </view>
        <view wx:if="{{seller.supports}}" class="_div data-v-dbcb21c4 support">
          <label class="_span data-v-dbcb21c4 icon decrease {{classMap[seller.supports[0].type]}}"></label>
          <label class="_span data-v-dbcb21c4 text">{{seller.supports[0].description}}</label>
        </view>
      </view>
      <view wx:if="{{seller.supports}}" class="_div data-v-dbcb21c4 support-count" bindtap="handleProxy" data-eventid="{{'0'}}" data-comkey="{{$k}}">
        <label class="_span data-v-dbcb21c4 count">{{seller.supports.length}}个</label>
        <view class="_i data-v-dbcb21c4 iconfont icon-icon icon"></view>
      </view>
    </view>
    <view class="_div data-v-dbcb21c4 bulletin-wrapper" bindtap="handleProxy" data-eventid="{{'1'}}" data-comkey="{{$k}}">
      <label class="_span data-v-dbcb21c4 bulletin-title"></label>
      <label class="_span data-v-dbcb21c4 bulletin-text">{{seller.bulletin}}</label>
    </view>
    <view class="_div data-v-dbcb21c4 background">
      <image src="{{seller.avatar}}" width="100%" height="100%" class="_image data-v-dbcb21c4"></image>
    </view>
    <view hidden="{{!(detailShow)}}" class="_div data-v-dbcb21c4 detail">
      <view class="_div data-v-dbcb21c4 detail-wrapper clearfix">
        <view class="_div data-v-dbcb21c4 detail-main">
          <view class="_h1 data-v-dbcb21c4 name">{{seller.name}}</view>
          <view class="_div data-v-dbcb21c4 star-wrapper">
            <template data="{{...$root[$kk+'0'], $root}}" is="star$cc54dd1e"></template>
          </view>
          <view class="_div data-v-dbcb21c4 title">
            <view class="_div data-v-dbcb21c4 line"></view>
            <view class="_div data-v-dbcb21c4 text">优惠信息</view>
            <view class="_div data-v-dbcb21c4 line"></view>
          </view>
          <view wx:if="{{seller.supports}}" class="_ul data-v-dbcb21c4 supports">
            <view class="_li data-v-dbcb21c4 support-item" wx:key="index" key="{{index}}" wx:for="{{seller.supports}}" wx:for-index="index" wx:for-item="item">
              <label class="_span data-v-dbcb21c4 icon decrease {{classMap[seller.supports[index].type]}}"></label>
              <label class="_span data-v-dbcb21c4 text">{{seller.supports[index].description}}</label>
            </view>
          </view>
          <view class="_div data-v-dbcb21c4 title">
            <view class="_div data-v-dbcb21c4 line"></view>
            <view class="_div data-v-dbcb21c4 text">商家公告</view>
            <view class="_div data-v-dbcb21c4 line"></view>
          </view>
          <view class="_div data-v-dbcb21c4 bulletin">
            <view class="_p data-v-dbcb21c4 content">{{seller.bulletin}}</view>
          </view>
        </view>
      </view>
      <view class="_div data-v-dbcb21c4 detail-close" bindtap="handleProxy" data-eventid="{{'2'}}" data-comkey="{{$k}}">x</view>
    </view>
  </view>
</template>